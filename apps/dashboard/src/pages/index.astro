---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>WA Gateway</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="min-h-screen bg-background text-foreground">
        <main class="mx-auto max-w-6xl px-6 py-10 sm:py-16">
            <header class="flex items-center justify-between">
                <div class="text-lg font-semibold tracking-tight">WA Gateway</div>
                <div class="flex items-center gap-3 text-sm">
                    <a class="text-muted-foreground hover:text-foreground" href="/privacy">Privacy</a>
                    <a class="text-muted-foreground hover:text-foreground" href="/terms">Terms</a>
                    <a
                        class="rounded-full border border-border px-4 py-2 text-sm font-medium hover:border-border hover:text-foreground"
                        href="/login"
                    >
                        Sign in
                    </a>
                </div>
            </header>

            <section class="mt-16 grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
                <div>
                    <div class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-600">
                        Multi-account WhatsApp Control
                    </div>
                    <h1 class="mt-4 text-4xl font-semibold tracking-tight text-foreground sm:text-5xl">
                        Operate WhatsApp at scale without losing the human touch.
                    </h1>
                    <p class="mt-4 text-lg text-muted-foreground">
                        WA Gateway helps teams connect multiple numbers, automate replies, and run targeted campaigns with real-time delivery insight.
                    </p>
                    <div class="mt-8 flex flex-wrap items-center gap-3">
                        <a
                            class="rounded-full bg-emerald-600 px-6 py-3 text-sm font-semibold text-white hover:bg-emerald-700"
                            href="/login"
                        >
                            Start dashboard
                        </a>
                        <a
                            class="rounded-full border border-border px-6 py-3 text-sm font-semibold text-muted-foreground hover:border-border"
                            href="/login"
                        >
                            Request access
                        </a>
                    </div>
                    <div class="mt-6 text-xs text-muted-foreground">
                        Built for growth teams, operations, and customer support.
                    </div>
                </div>
                <div class="rounded-3xl border border-border bg-gradient-to-br from-slate-50 to-white p-6 shadow-sm">
                    <div class="rounded-2xl border border-border bg-background p-5">
                        <div class="text-xs font-semibold uppercase tracking-[0.2em] text-muted-foreground">
                            Live overview
                        </div>
                        <div class="mt-4 grid gap-3">
                            <div class="flex items-center justify-between rounded-xl border border-border bg-muted px-4 py-3 text-sm">
                                <div>
                                    <div class="font-medium text-foreground">Connected numbers</div>
                                    <div class="text-xs text-muted-foreground">Realtime status sync</div>
                                </div>
                                <div class="text-lg font-semibold text-emerald-600">12</div>
                            </div>
                            <div class="flex items-center justify-between rounded-xl border border-border bg-background px-4 py-3 text-sm">
                                <div>
                                    <div class="font-medium text-foreground">Auto-reply coverage</div>
                                    <div class="text-xs text-muted-foreground">Rules with fallback</div>
                                </div>
                                <div class="text-lg font-semibold text-foreground">86%</div>
                            </div>
                            <div class="flex items-center justify-between rounded-xl border border-border bg-muted px-4 py-3 text-sm">
                                <div>
                                    <div class="font-medium text-foreground">Campaign success</div>
                                    <div class="text-xs text-muted-foreground">Delivery & read rates</div>
                                </div>
                                <div class="text-lg font-semibold text-foreground">94%</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 grid gap-3 text-sm text-muted-foreground">
                        <div class="flex items-center justify-between">
                            <span>Secure session management</span>
                            <span class="text-emerald-600">Active</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span>Receipt tracking</span>
                            <span class="text-emerald-600">Realtime</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span>Multi-tenant ready</span>
                            <span class="text-amber-600">In progress</span>
                        </div>
                    </div>
                </div>
            </section>

            <section class="mt-20 grid gap-8 lg:grid-cols-3">
                <div class="rounded-2xl border border-border bg-background p-6">
                    <div class="text-sm font-semibold text-foreground">Inbox + manual messaging</div>
                    <p class="mt-2 text-sm text-muted-foreground">
                        Keep every conversation visible, reply instantly, and switch sender accounts with clarity.
                    </p>
                </div>
                <div class="rounded-2xl border border-border bg-background p-6">
                    <div class="text-sm font-semibold text-foreground">Automation without chaos</div>
                    <p class="mt-2 text-sm text-muted-foreground">
                        Auto-reply rules with prioritization, cooldowns, and QA testing to keep responses consistent.
                    </p>
                </div>
                <div class="rounded-2xl border border-border bg-background p-6">
                    <div class="text-sm font-semibold text-foreground">Campaign precision</div>
                    <p class="mt-2 text-sm text-muted-foreground">
                        Segment by tags, preview targets, schedule sends, and watch delivery status update live.
                    </p>
                </div>
            </section>

            <section class="mt-20">
                <div class="flex flex-wrap items-center justify-between gap-4">
                    <div>
                        <div class="text-sm font-semibold text-foreground">Pricing</div>
                        <p class="mt-2 text-sm text-muted-foreground">
                            Flexible plans to match the scale of your operation.
                        </p>
                    </div>
                    <div class="flex items-center gap-2 rounded-full border border-border bg-background p-1 text-xs text-muted-foreground">
                        <button
                            class="billing-toggle rounded-full px-3 py-1 text-xs font-semibold text-foreground"
                            data-billing="monthly"
                            aria-pressed="true"
                        >
                            Monthly
                        </button>
                        <button
                            class="billing-toggle rounded-full px-3 py-1 text-xs font-semibold text-muted-foreground hover:text-muted-foreground"
                            data-billing="annual"
                            aria-pressed="false"
                        >
                            Annual
                        </button>
                    </div>
                </div>
                <div class="mt-8 grid gap-6 lg:grid-cols-3">
                    <div class="rounded-2xl border border-border bg-background p-6">
                        <div class="text-sm font-semibold text-foreground">Starter</div>
                        <div class="mt-2 text-3xl font-semibold" data-price="starter" data-monthly="$29/mo" data-annual="$299/yr">
                            $29<span class="text-sm font-medium text-muted-foreground">/mo</span>
                        </div>
                        <p class="mt-2 text-sm text-muted-foreground">For early teams managing up to 3 numbers.</p>
                        <ul class="mt-4 space-y-2 text-xs text-muted-foreground">
                            <li>3 WhatsApp numbers</li>
                            <li>3,000 contacts</li>
                            <li>Auto-replies (keyword + contains)</li>
                        </ul>
                        <a
                            class="mt-6 inline-flex w-full justify-center rounded-full border border-border px-4 py-2 text-xs font-semibold text-muted-foreground hover:border-border"
                            href="/login"
                        >
                            Get started
                        </a>
                    </div>
                    <div class="rounded-2xl border border-emerald-200 bg-emerald-50 p-6 shadow-sm">
                        <div class="text-xs font-semibold uppercase tracking-[0.2em] text-emerald-600">
                            Most popular
                        </div>
                        <div class="mt-3 text-sm font-semibold text-foreground">Growth</div>
                        <div class="mt-2 text-3xl font-semibold text-foreground" data-price="growth" data-monthly="$79/mo" data-annual="$790/yr">
                            $79<span class="text-sm font-medium text-muted-foreground">/mo</span>
                        </div>
                        <p class="mt-2 text-sm text-muted-foreground">For scaling ops with active campaigns.</p>
                        <ul class="mt-4 space-y-2 text-xs text-muted-foreground">
                            <li>12 WhatsApp numbers</li>
                            <li>50,000 contacts</li>
                            <li>Auto-replies + webhook + schedules</li>
                        </ul>
                        <a
                            class="mt-6 inline-flex w-full justify-center rounded-full bg-emerald-600 px-4 py-2 text-xs font-semibold text-white hover:bg-emerald-700"
                            href="/login"
                        >
                            Upgrade
                        </a>
                    </div>
                    <div class="rounded-2xl border border-border bg-background p-6">
                        <div class="text-sm font-semibold text-foreground">Enterprise</div>
                        <div class="mt-2 text-3xl font-semibold" data-price="enterprise" data-monthly="Custom" data-annual="Custom">
                            Custom
                        </div>
                        <p class="mt-2 text-sm text-muted-foreground">For multi-tenant deployments and high volume.</p>
                        <ul class="mt-4 space-y-2 text-xs text-muted-foreground">
                            <li>Unlimited numbers</li>
                            <li>Dedicated SLA</li>
                            <li>Custom integrations & onboarding</li>
                        </ul>
                        <a
                            class="mt-6 inline-flex w-full justify-center rounded-full border border-border px-4 py-2 text-xs font-semibold text-muted-foreground hover:border-border"
                            href="/login"
                        >
                            Contact sales
                        </a>
                    </div>
                </div>
            </section>

            <section class="mt-20 rounded-3xl border border-border bg-muted px-8 py-10">
                <div class="grid gap-6 lg:grid-cols-[1.2fr_0.8fr] lg:items-center">
                    <div>
                        <div class="text-sm font-semibold text-foreground">Operational clarity</div>
                        <p class="mt-2 text-sm text-muted-foreground">
                            Combine multi-account routing, message receipts, and audit trails into one operational view so teams can move fast with confidence.
                        </p>
                    </div>
                    <div class="flex flex-wrap items-center gap-3 text-xs text-muted-foreground">
                        <span class="rounded-full border border-border bg-background px-3 py-1">SSE updates</span>
                        <span class="rounded-full border border-border bg-background px-3 py-1">Webhook-ready</span>
                        <span class="rounded-full border border-border bg-background px-3 py-1">Queue based</span>
                        <span class="rounded-full border border-border bg-background px-3 py-1">Postgres + Redis</span>
                    </div>
                </div>
            </section>

            <footer class="mt-16 flex flex-col items-start justify-between gap-4 border-t border-border pt-6 text-xs text-muted-foreground sm:flex-row sm:items-center">
                <div>Â© {new Date().getFullYear()} WA Gateway. All rights reserved.</div>
                <div class="flex items-center gap-4">
                    <a class="hover:text-muted-foreground" href="/privacy">Privacy</a>
                    <a class="hover:text-muted-foreground" href="/terms">Terms</a>
                    <a class="hover:text-muted-foreground" href="/login">Dashboard</a>
                </div>
            </footer>
        </main>
        <script type="module" is:inline>
            const buttons = Array.from(document.querySelectorAll(".billing-toggle"));
            const prices = Array.from(document.querySelectorAll("[data-price]"));

            const apply = (mode) => {
                buttons.forEach((btn) => {
                    const active = btn.getAttribute("data-billing") === mode;
                    btn.setAttribute("aria-pressed", active ? "true" : "false");
                    btn.classList.toggle("text-foreground", active);
                    btn.classList.toggle("text-muted-foreground", !active);
                });
                prices.forEach((el) => {
                    const value = el.getAttribute(mode === "annual" ? "data-annual" : "data-monthly");
                    if (!value) return;
                    const [price, suffix] = value.split("/");
                    if (suffix) {
                        el.innerHTML = price + '<span class="text-sm font-medium text-muted-foreground">/' + suffix + "</span>";
                    } else {
                        el.textContent = value;
                    }
                });
            };

            buttons.forEach((btn) => {
                btn.addEventListener("click", () => apply(btn.getAttribute("data-billing") || "monthly"));
            });
            apply("monthly");
        </script>
    </body>
</html>

<style is:global>
    body {
        font-family: "Plus Jakarta Sans", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }
</style>
